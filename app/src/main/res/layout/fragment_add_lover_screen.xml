<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.AddLoverScreen">

   <androidx.appcompat.widget.SearchView
       android:id="@+id/lover_search_field"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:background="@color/light_pink"
       app:queryHint="Find your lover"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>

   <TextView
      android:id="@+id/lovers_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginStart="20dp"
       tools:text="UserName"
       android:textSize="20sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/lover_search_field"/>

   <TextView
       android:id="@+id/error_message"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginStart="20dp"
       android:visibility="gone"
       tools:text="Error"
       android:textSize="20sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/lover_search_field"/>

   <ProgressBar
       android:id="@+id/loadingStatus"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="16dp"
       android:visibility="gone"
       app:layout_constraintTop_toBottomOf="@+id/lover_search_field"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>