<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_screen_main"
    tools:context=".presentation.ui.MessageScreen">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/btn_new_msg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/new_msg_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"/>

    <!-- Card with swipe to see all the messages arrived -->

        <ImageView
            android:id="@+id/card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/love_card_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="I love you, babe"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/card_bg"
            app:layout_constraintEnd_toEndOf="@id/card_bg"
            app:layout_constraintTop_toTopOf="@id/card_bg"
            app:layout_constraintBottom_toBottomOf="@id/card_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>